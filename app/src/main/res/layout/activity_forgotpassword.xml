<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="10">
    <LinearLayout
        android:orientation="vertical"
        android:minWidth="25px"
        android:minHeight="25px"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/forgotinearLayout2"
        android:weightSum="10">
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/forgotlinearLayout1"
            android:layout_weight="15"
            android:weightSum="10"
            android:layout_marginLeft="15dp"
            android:layout_marginRight="15dp"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:isScrollContainer="false">
            <TextView
                android:text="Forgot Password"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView1"
                android:gravity="center_horizontal"
                android:layout_margin="12dp" />
            <EditText
                android:inputType="textEmailAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/resmail"
                android:layout_margin="8dp"
                android:hint="Email" />
            <Button
                android:text="RESET"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/resbutton"
                android:layout_margin="15dp" />
            <TextView
                android:text="Please enter your registered email so we can send you the reset instrucrions"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:gravity="center"
                android:textColor="#ff957553"
                android:layout_margin="10dp" />
        </LinearLayout>
        <TextView
            android:text="LOGIN"
            android:textAppearance="?android:attr/textAppearanceSmall"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/logintxtvwres"
            android:textColor="#ff957553"
            android:gravity="center"
            android:layout_gravity="bottom"
            android:layout_below="@id/forgotlinearLayout1"
            android:layout_alignParentBottom="true"
            android:layout_weight="-3" />
    </LinearLayout>
</LinearLayout>