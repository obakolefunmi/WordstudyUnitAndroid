<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/item"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
        android:id="@+id/message_user"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:fontFamily="sans-serif-condensed"
        android:gravity="left"
        android:text="olomolaiyeshalom@gmail.com"
        android:textSize="14sp"
        android:typeface="serif" />

    <RelativeLayout
        android:id="@+id/message_shifter"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp">


        <android.support.v7.widget.CardView
            android:id="@+id/message_item_text_holder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:layout_marginRight="5dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="3dp">

            <TextView
                android:id="@+id/message_item_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:maxWidth="255dp"
                android:text=" w "
                android:textSize="16sp" />
        </android.support.v7.widget.CardView>

        <TextView
            android:id="@+id/message_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/message_item_text_holder"
            android:layout_below="@+id/message_item_text_holder"
            android:layout_marginTop="2dp"
            android:fontFamily="sans-serif-smallcaps"

            android:gravity="right"
            android:text="11:09"
            android:textSize="14sp"
            android:typeface="sans" />

    </RelativeLayout>

</LinearLayout>